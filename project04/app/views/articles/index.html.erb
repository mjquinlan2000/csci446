<h1>All the World's Articles</h1>

<table id="article_index">
  <tr>
    <th>Title</th>
    <th>Author Name</th>
    <th>Body</th>
    <th>Creation Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.author %></td>
    <td><%= article.content.truncate(80) %></td>
    <td><%= article.created_at %></td>
    <td><%= link_to image_tag('/assets/Search.png'), article, :title => "View" %></td>
    <td><%= link_to image_tag('/assets/Pencil.png'), edit_article_path(article), :title => "Edit" %></td>
    <td><%= link_to image_tag('/assets/Trash.png'), article, confirm: 'Are you sure?', method: :delete, :title => "Delete" %></td>
  </tr>
<% end %>
</table>

