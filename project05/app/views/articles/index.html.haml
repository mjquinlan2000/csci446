- content_for :subtext do
  %p
    \...with a name .com hipsters love</p
- content_for :stylesheet_links do
  = stylesheet_link_tag "articles", :media => "all"
%p#notice= notice
#create_container
  %h1#index_header All the World's Articles
  = link_to image_tag('/assets/Add.png', :size => '30x30') + "Create a New Article", |
    new_article_path, :title => 'Create Article'                                     |
= will_paginate @articles
- if @articles.count > 0
  = render :partial => 'shared/articles_table', :locals => { :articles => @articles }
  %p= pluralize(@articles.count, "article")
  = will_paginate @articles
- else
  %h3 There are currently no articles to display
