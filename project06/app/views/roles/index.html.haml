- content_for :stylesheet_links do
  = stylesheet_link_tag "shared", :media => "all"
  = stylesheet_link_tag "roles", :media => "all"
%h1 Roles
%table.pretty_table
  %thead
    %tr
      %th Role Name
      %th Number of Users
  %tbody
    - @roles.each do |role|
      %tr{:class => cycle("odd_row", "even_row")}
        %td= role.role
        %td= role.users.count
