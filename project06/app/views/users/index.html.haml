- content_for :stylesheet_links do
  = stylesheet_link_tag "users", :media => "all"
  = stylesheet_link_tag "shared", :media => "all"
%h1 Listing users
%table.pretty_table
  %tr
    %th Username
    %th Email
    %th First name
    %th Last name
    %th
    %th
    %th
  - @users.each do |user|
    %tr{:class => cycle("even_row", "odd_row")}
      %td= user.username
      %td= user.email
      %td= user.first_name
      %td= user.last_name
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete
