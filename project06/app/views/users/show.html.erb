<% content_for :stylesheet_links do %>
	<%= stylesheet_link_tag "shared", :media => "all" %>
	<%= stylesheet_link_tag "users", :media => "all" %>
<% end %>

<p id="notice"><%= notice %></p>

<h1><%= @user.username %>'s profile</h1>

<% if @user.photo.file? %>
	<%= image_tag @user.photo.url(:small)%>
<% else %>
	<h2>
		No photo, Please
		<%= link_to "Update", edit_user_path(@user) %>
		your profile
	</h2>
<% end %>
<p>First Name: <%= @user.first_name %></p>
<p>Last Name: <%= @user.last_name %></p>
<p>E-mail: <%= @user.email %></p>
<% if @user.games.count > 0 %>
	<h3>Games added by you</h3>
	<table class="pretty_table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Rating</th>
				<th>Added</th>
			</tr>
		</thead>
		<tbody>
			<% @user.games.each do |game| %>
				<tr class="<%= cycle("even_row", "odd_row") %>">
					<td><%= game.title %></td>
					<td><%= game.rating %></td>
					<td><%= game.created_at %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<h3>You have added no games</h3>
	<p><%= link_to "Add some games!", new_game_path %></p>
<% end %>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', root_url %>
